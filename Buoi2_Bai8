#include <iostream>
#include <math.h>
using namespace std;

int main()
{
	cout << "Nhap vao so n: ";
	int n, tcs = 100;
	cin >> n;
	while (tcs >=10)
		while (tcs >= 10)
		{
			tcs = 0;
			while (n > 0)
			{
				tcs += n % 10;
				n /= 10;
			}
			n = tcs;
		}
	cout << "Tong cac chu so den khi nho hon 10 la: " << tcs;
	cin >> n;
	return 0;
}
